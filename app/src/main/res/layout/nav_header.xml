<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/nav_header_padding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary">
    
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/nav_header_imageview"
        android:layout_width="@dimen/nav_header_circleimageview"
        android:layout_height="@dimen/nav_header_circleimageview"
        android:src="@drawable/ic_account_circle_black_24dp"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/nav_header_imageview"
        android:padding="@dimen/nav_header_padding"
        android:orientation="vertical">
        <TextView
            android:id="@+id/nav_header_accountName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_marginTop="@dimen/nav_header_padding"
            android:layout_centerHorizontal="true"
            android:text="AccountName"
            android:textSize="@dimen/nav_header_name_textSize"/>

        <TextView
            android:id="@+id/nav_header_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_marginTop="@dimen/nav_header_padding"
            android:layout_centerHorizontal="true"
            android:text="weather"
            android:textSize="@dimen/nav_header_name_textSize"/>

    </LinearLayout>



</RelativeLayout>